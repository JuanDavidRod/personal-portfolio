---
interface Props {
  name: string
  description: string
  participation: string
}

const { name, description, participation } = Astro.props
---

<div
  class="bg-[#4141414d] border-solid border border-[#5b5b5b33] rounded-md shadow-[0px_1px_20px_0px_#00000094] backdrop-blur-sm p-6"
>
  <h3 class="text-3xl font-semibold mb-2">{name}</h3>
  <p class="text-sm font-light leading-4 h-11 text-ellipsis overflow-hidden">
    {description}
  </p>
  <img class="aspect-square object-contain w-60 m-auto" src="" alt="" />
  <p class="text-base font-light h-24 text-ellipsis overflow-hidden">
    {participation}
  </p>
  <ul
    class="flex gap-2 w-auto flex-wrap mt-3 pt-5 justify-start border-t border-[#3a3a3a]
    [&>li]:text-sm
    [&>li]:text-center
    [&>li]:font-light
    [&>li]:bg-gradient-to-r from-[#E03C47] from-0% via-[#AB35A0] via-30% to-[#8222A5] to-100%
    [&>li]:rounded-md
    [&>li]:px-5"
  >
    <li>React Native</li>
    <li>Javascript</li>
    <li>React</li>
    <li>Typescript</li>
    <li>PHP</li>
    <li>HTML</li>
  </ul>
</div>

---

<h1 class="text-5xl font-semibold">Experiencia</h1>
<div class="flex flex-col gap-12 mt-10 mb-14">
  {
    dataJobs.map(
      ({ date, description, nameCompany, position, subPosition }) => {
        return (
          <InfoBox
            date={date}
            description={description}
            nameCompany={nameCompany}
            position={position}
            subPosition={subPosition}
          />
        )
      }
    )
  }
</div>
